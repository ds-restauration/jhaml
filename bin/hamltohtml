#!/usr/bin/env node
'use strict'
const args = require('minimist')(process.argv.slice(2))
const Parser = require('../lib/Parser.js')
const fs = require('fs')

if(args.help || args.h) {
  let stream = fs.createReadStream(`${__dirname}/help`)
  stream.pipe(process.stdout)
  stream.on('end', () => process.exit(0))
  return
}

let Javascript = require('../lib/engines/Javascript.js')
let Push = require('../lib/engines/Push.js')
let Eval = require('../lib/engines/Eval.js')

let hamltohtml = new Parser({engine: [new Javascript(), new Eval()]}, {
  disabled: true, 
  select: [{value: 0, text: 'Zero'}, {value: 1, text: 'One'}],
  interpolated: 'Test',
  test: '&<>'
})

let output = process.stdout

if(args._[0]) {
  output = fs.createWriteStream(args._[0]) 
}

process.stdin.setEncoding('utf8')

process.stdin
.pipe(hamltohtml)
.pipe(output)
